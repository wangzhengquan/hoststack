
INSTALL_LOCATION="/usr/local"

function install() {
	sudo ./@PROJECT_NAME@-@PROJECT_VERSION@.1-Linux.sh  --prefix=${INSTALL_LOCATION} --skip-license  --exclude-subdir

	sudo sudo	cp ${INSTALL_LOCATION}/etc/backerd.service /etc/systemd/system/backerd.service

	sudo systemctl daemon-reload
	sudo systemctl enable  backerd.service 
	sudo  systemctl restart backerd.service 
	systemctl list-unit-files --all | grep backerd
	systemctl status backerd.service
}


function uninstall() {
  sudo systemctl stop backerd.service 
	sudo systemctl disable  backerd.service 
	sudo rm -f /etc/systemd/system/backerd.service
	sudo rm -f ${INSTALL_LOCATION}/bin/{backer,backer_supervisor}
	
}

case ${1} in
  "install")
  install
  ;;
  "uninstall")
 	uninstall
  ;;
  "")
  install
  ;;
  *)
  echo "Invalid Argument."
 	
  ;;

esac